!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %link{:rel => "icon", :href => "/favicon.ico", :type => "image/ico"}
    %link{:rel => "stylesheet", :href => "/foundation.css", :type => "text/css"}
    %link{:rel => "stylesheet", :href => "/btns.css", :type => "text/css"}
    %link{:rel => "stylesheet", :href => "/style.css", :type => "text/css"}
    %link{:rel => "stylesheet", :href => "https://s3-us-west-2.amazonaws.com/colors-css/2.2.0/colors.min.css", :type => "text/css"}
    %title Accountabl.es - Stay accountable
  %body.miracle-grow-gradient
    .header.row
      %a{:href => "/"}
        %h1 Accountabl.es
      %h2 Stay accountable easily

      - if env['warden'].authenticate
        .nav
          %ul
            %li
              %a{:href => "/"}Home
            %li
              %a{:href => "/settings"}Settings
            %li
              %a{:href => "/auth/logout"}Log out

      .content.row
      .flash
      - if flash[:error]
        %p{:style => 'color: red;'}
          = flash[:error]
      - if flash[:nope]
        %p{:style => 'color: red;'}
          = flash[:nope]
      - if flash[:already]
        %p{:style => 'color: red;'}
          = flash[:already]
      - if flash[:changed]
        %p{:style => 'color: green;'}
          = flash[:changed]
      - if flash[:deleted]
        %p{:style => 'color: green;'}
          = flash[:deleted]

      #{yield}
